<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="2"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/coming_details_pic"
        android:layout_weight="1"
        android:src="@drawable/coming_pic1"
        app:viewAspectRatio="0.77"
        app:placeholderImage="@drawable/august1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/coming_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:maxLines="1"
            android:ellipsize = "end"
            android:textColor="#1E90FF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/coming_time_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:maxLines="1"
            android:ellipsize = "end"
            android:textColor="#595959"
            android:textSize="12sp" />

        <FrameLayout
            android:id="@+id/likes_coming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                app:placeholderImage="@drawable/selector_likes_choose"
                app:viewAspectRatio="3.57" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>